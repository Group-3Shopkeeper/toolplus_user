<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemRemoveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:padding="5dp"
            android:src="@drawable/remove_cartitem"
            app:civ_circle_background_color="@color/colorAccent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewOfCart"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="135dp"
                    android:layout_weight="0.4"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/cartProductImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:layout_weight="0.6"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="Product Name"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/availableStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available in Stock"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/green"
                        />

                    <TextView
                        android:id="@+id/cartProductPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textStyle="bold"
                        android:fontFamily="serif"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:textSize="16dp"
                        />
                    <Button
                        android:id="@+id/btnBuySingleProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="-5dp"
                        android:background="@drawable/btn_buy_cart"
                        android:elevation="20sp"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>