<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Change Delivery Details"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                style="@style/EtChangeDetailsBuyingProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textHeading"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etAddress"
                style="@style/EtChangeDetailsBuyingProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etName"
                android:hint="Address"
                android:inputType="text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etMobile"
                style="@style/EtChangeDetailsBuyingProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAddress"
                android:hint="Mobile Number"
                android:inputType="text"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/EtChangeDetailsBuyingProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etMobile"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etEmail"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_buy_cart"
                    android:elevation="4dp">

                    <TextView
                        style="@style/ButtonTextBuyingProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/reome"
                        android:text="Cancel"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_buy_cart"
                    android:elevation="4dp">

                    <TextView
                        style="@style/ButtonTextBuyingProcess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/green_check"
                        android:text="Change"
                        android:textColor="@color/green"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>