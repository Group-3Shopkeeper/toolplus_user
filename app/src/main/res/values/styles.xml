<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.EmailButton">
        <item name="drawableStartCompat">@drawable/email1</item>
        <item name="android:background">@drawable/login_border_gradiant</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.PhoneButton">
        <item name="drawableStartCompat">@drawable/phone_login</item>
        <item name="android:background">@drawable/login_border_gradiant</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="Theme.MyDialog" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorCloudLight</item>
        <item name="android:textColorSecondary">@color/colorCloudLight</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EtAddingUserCredential">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/border_white</item>
        <item name="android:elevation">6dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EtChangeDetailsBuyingProcess">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/border_white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TvDeliveryAddressText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ButtonTextBuyingProcess">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <dimen name="fab_margin">10dp</dimen>
    <dimen name="design_fab_image_size" tools:override="true">40dp</dimen>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFC107</item>
        <item name="colorControlActivated">@color/buy</item>

    </style>

</resources>